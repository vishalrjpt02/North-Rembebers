

@{
    ViewData["Title"] = "CreateInvoice";
    var order = ViewBag.Order;
    var product = ViewBag.Product;
    var customer = ViewBag.Customer;
}

 
<h1>Invoice</h1>


    <div class="container bootdey">
        <div class="row invoice row-printable">
            <div class="col-md-10">
                <!-- col-lg-12 start here -->
                <div class="panel panel-default plain" id="dash_0">
                    <!-- Start .panel -->
                    <div class="panel-body p30">
                        <div class="row">
                            <!-- Start .row -->
                            <div class="col-lg-6">
                                <!-- col-lg-6 start here -->
                            <div class="invoice-logo"><img src="~/css/ccd-1564550900.jpg" class="card-img-bottom"/></div>
                            </div>
                            <!-- col-lg-6 end here -->
                            <div class="col-lg-6">
                                <!-- col-lg-6 start here -->
                                <div class="invoice-from">
                                <ul class="list-unstyled text-lg-end ">
                                        <li class="fw-bold">CCD Bengaluru</li>
                                        <li>tony Vittal Mallya Road ,</li>
                                        <li>BENGALURU 560001</li>
                                        <li>VAT Number IN826113958</li>
                                    </ul>
                                </div>
                            </div>
                            <!-- col-lg-6 end here -->
                            <div class="col-lg-12">
                                <!-- col-lg-12 start here -->
                                <div class="invoice-details mt25">
                                    <div class="well">
                                        <ul class="list-unstyled mb0">
                                            <li><strong>Invoice</strong> #00 @order.orderID</li>
                                            <li><strong>Invoice Date:</strong> @DateTime.Now.ToString("yyyy-MM-dd h:mm:ss tt")</li>
                                            <li><strong>Due Date:</strong> @DateTime.Now.ToString("dddd-MMMM") Thursday, December 1th, 2015</li>
                                            <li><strong>Status:</strong> <span class="label label-danger">UNPAID</span></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="invoice-to mt25">
                                    <ul class="list-unstyled">
                                        <li><strong>Invoiced To</strong></li>
                                        <li>@customer.Name</li>
                                        <li>@customer.Email</li>
                                        <li>@customer.Phone</li>
                                        <li>Banelore , IN, 2023</li>
                                        <li>BHARAT</li>
                                    </ul>
                                </div>
                                <div class="invoice-items">
                                    <div class="table-responsive" style="overflow: hidden; outline: none;" tabindex="0">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th class="per70 text-center">Description</th>
                                                    <th class="per5 text-center">Qty</th>
                                                    <th class="per25 text-center">Total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>@product.Description</td>
                                                    <td class="text-center">@order.quantity</td>
                                                    <td class="text-center">$@product.Price USD</td>
                                                </tr>
                                                <tr>
                                                    <td>Serives</td>
                                                    <td class="text-center">1</td>
                                                    <td class="text-center">$20.00 USD</td>
                                                </tr>
                                               
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th colspan="2" class="text-right">Sub Total:</th>
                                                    <th class="text-center">$@(product.Price + 20) USD</th>
                                                </tr>
                                                <tr>
                                                    <th colspan="2" class="text-right">20% VAT:</th>
                                                    <th class="text-center">$4.0 USD</th>
                                                </tr>
                                                <tr>
                                                    <th colspan="2" class="text-right">Credit:</th>
                                                    <th class="text-center">$00.00 USD</th>
                                                </tr>
                                                <tr>
                                                    <th colspan="2" class="text-right">Total:</th>
                                                    <th class="text-center">$@(product.Price + 20 + 4)USD</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                                <div class="invoice-footer mt25">
                                 <p class="text-center">Generated on @DateTime.Now.ToString("yyyy-MM-dd h:mm:ss tt") <a href="@Url.Action("PrintViewToPdf", "CafeCoffeeDay_Billing", new { cust=order.customerId, prd=order.productID, ordId=order.orderID})" class="btn btn-outline-success ml15"><i class="fa fa-print mr5"></i> View Details</a></p>
                                 <p class="text-center">Generated on @DateTime.Now.ToString("yyyy-MM-dd h:mm:ss tt") <a href="@Url.Action("PrintInvoice", "CafeCoffeeDay_Billing", new { cust=order.customerId, prd=order.productID, ordId=order.orderID})" class="btn btn-outline-success ml15"><i class="fa fa-print mr5"></i> Print</a></p>
                                </div>
                            </div>
                            <!-- col-lg-12 end here -->
                        </div>
                        <!-- End .row -->   
                    </div>
                </div>
                <!-- End .panel -->
            </div>
            <!-- col-lg-12 end here -->
        </div>
    </div>
    

